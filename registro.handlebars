<body class="body_registro">
    <div class="big-container">
        <div class="container-input">
            <form action="/registro" method="POST" class="container-sm"> 
                <div class="login-form">
                    <h1>PreguntadODS</h1>
                </div>
                <div class="content">
                    <div class="form__group field">
                        <label for="usuarioId" class="form-label"></label>
                        <input type="text" class="form__field" id="usuarioId" name="usuario" placeholder="Ingrese un nombre de usuario">
                    </div>
                    <div class="form__group field">
                        <label for="passwordId" class="form__label"></label>
                        <input type="password" class="form__field" id="passwordId" name="contraseña" placeholder="Ingrese una contraseña">
                    </div>
                </div>
                <div class="outerLogin">
                    <input type="submit" class="button_slide" value="Registro">
                </div>
            </form> 
        </div>
    </div>
</body>
